<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.StickyMemory.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:backgroundTint="#B3FCD4C8"
    android:id="@+id/widget_layout"
    android:theme="@style/Theme.StickyMemory.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text_nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/widget_dday_name"
        android:text="@string/widget_dday_name"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/appwidget_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appwidget_text_nm"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:text="@string/app_name"
        android:textStyle="bold" />

</RelativeLayout>